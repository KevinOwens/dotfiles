alias aliases='vim ~/.dotfiles/bash/aliases'
alias paliases='vim ~/.dotfiles/bash/private_aliases'
alias bashrc='vim ~/.dotfiles/bash/bashrc'
alias c='cd ~/code'
alias dotfiles='cd ~/.dotfiles'
alias finder='open'
alias gg='git lg'
alias grep='ack'
alias home='cd ~'
alias l='ls -lahG'
alias ll='ls -lahG'
alias refresh='source ~/.zshrc'
alias profile='vim ~/.zshrc'
alias ports='sudo lsof -nP -iTCP -sTCP:LISTEN'
alias v='vim'
alias vi='vim'

#Bundler aliases
